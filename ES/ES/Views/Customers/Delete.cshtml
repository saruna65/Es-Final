        * {
            font-family: 'Montserrat', sans-serif;
        }

        .h1 {
            font-family: 'Montserrat', sans-serif;
        }

        .f {
            font-family: 'Montserrat', sans-serif;
        }

    </style>
</head>


<div class="alert text-white font-weight-bold h1" role="alert" style="margin-top:-50px; font-size:20px; background-color:red;">
    Are you want to delete?
</div>


<h1 class="h1" >Delete</h1>

<div class="card" style="width: 500px; margin-left:300px;height:300px; text-align:left">
    <div class="card-body">
        <table>
            <tr>
                <th></th>
                <th></th>
                <th></th>

            </tr>
            <tr>
                <td>
                    <h3 class="f" style="margin-top:7px;">Customer Name</h3>
                </td>
                <td>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </td>

                <td class="f" style="font-size: 15px;">@Html.DisplayNameFor(model => model.Customer_Name)</td>
            </tr>
            <tr>
                <td>
                    <h3 class="f" style="margin-top:7px;">Customer Address</h3>
                </td>
                <td></td>

                <td class="f" style="font-size: 15px;">@Html.DisplayFor(model => model.Address)</td>
            </tr>
            <tr>

                <td>
                    <h3 class="f" style="margin-top:7px;">Contact No</h3>
                </td>
                <td></td>

                <td class="f" style="font-size: 15px;">@Html.DisplayFor(model => model.Phone_No)</td>
            </tr>
            <tr>
                <td>
                    <h3 class="f" style="margin-top:7px;">E-mail</h3>
                </td>
                <td></td>

                <td class="f" style="font-size: 15px;">@Html.DisplayFor(model => model.Email)</td>
            </tr>
        </table>
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div style="text-align: center;">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />



            </div>
            <div style="text-align: center; margin-top: 10px;">


                <i class="bi bi-arrow-bar-left h3">@Html.ActionLink("Go Back", "Index", new { @style = "color: black;" }, new { @class = "f" })</i>

            </div>


        }
    </div>


        
    </div>
</div>





