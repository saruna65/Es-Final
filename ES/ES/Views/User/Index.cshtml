@model IEnumerable<ES.Models.Login>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users</title>
    <link rel="icon" type="image/svg" href="~/assetsnew/iresha.svg">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <style>
        * {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>
<body>
   
    <div class="container">
        <br />
        <div class="col" style="text-align:right;">
            <p>

                @Html.ActionLink("New User", "Create", null, new { @class = "btn btn-outline-primary" })

            </p>
        </div>
        <h1>Users</h1>
        
            <table class="table table-striped table-bordered " style="width: 100%; height: 100px; text-align:left; overflow:auto;">
                <thead style="position: sticky; top: -1px; z-index: 1; background: #eee; ">
                    <tr>
                        <th>Name</th>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm ", @style = "margin-top:5px; margin-bottom:5px;" })
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm", @style = "margin-top:5px; margin-bottom:5px;" })*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm", @style = "margin-top:5px; margin-bottom:5px; " })

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        
    </div>
        <!-- Include Bootstrap JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
